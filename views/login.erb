<div class="row">
  <% if @warning %>
  <div class="col-md-12 danger">
    <%= @warning %>
  </div>
  <% end %>
  <div class="col-md-12 danger">
    <p>Please enter the name of the bot account you're using with this analytics platform below.</p>
  </div>
  <div class="col-md-12">
    <h1>Login</h1>
    <form action="/login" method="post">
      E-mail: <input type="text" class="form-control" id="email" size="60" name="email">
      Password: <input type="password" class="form-control" id="password" size="60" name="password">
      <button type="submit" class="btn btn-primary">Login</button>      
    </form>
    <hr />
    Forgot Password?
    <form action="/password_reset" method="post">
      E-mail: <input type="text" class="form-control" id="email" size="60" name="email">
      <button type="submit" class="btn btn-primary">Send E-mail</button>      
    </form>
  </div>
  <div class="col-md-12 danger">
    <p>Don't have an account yet? Sign up below</p>
  </div>
  <div class="col-md-12">
    <h1>Login</h1>
    <form action="/create_account" method="post">
      E-mail: <input type="text" class="form-control" id="email" size="60" name="email">
      First Name: <input type="text" class="form-control" id="first_name" size="60" name="first_name">
      Last Name: <input type="text" class="form-control" id="last_name" size="60" name="last_name">
      Company name: <input type="text" class="form-control" id="bot_name" size="60" name="account_name">
      Bot name: <input type="text" class="form-control" id="bot_name" size="60" name="bot_name">
      Password: <input type="password" class="form-control" id="password" size="60" name="password">
      Confirm: <input type="password" class="form-control" id="password" size="60" name="password_confirm">
      <button type="submit" class="btn btn-primary">Login</button>      
    </form>
  </div>
</div>
